#include<stdio.h>
#include<stdlib.h>
 
main () { 
      
     int codigo,Q;
     float total=0;
     scanf("%d%d",&codigo,&Q);
      
     if(codigo==1){
       total=Q*4.00;
     printf("Total: R$ %.2f\n",total);
       }
     else if(codigo==2){
        total=Q*4.50;
        printf("Total: R$ %.2f\n",total);
        }
     else if(codigo==3){
        total=Q*5.00;
        printf("Total: R$ %.2f\n",total);
        }     
     else if(codigo==4){
         total=Q*2.00;
         printf("Total: R$ %.2f\n",total);        
         }
      
    else if(codigo==5){
         total=Q*1.50;
         printf("Total: R$ %.2f\n",total);
         }
 
    return 0;
       
      }
